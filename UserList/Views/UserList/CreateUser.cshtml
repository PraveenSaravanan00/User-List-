@{
}
@model UserList.Models.showUserList.UserListData;

<div class="py-2 text-center">
    <h1>Create Form</h1>
</div>
<button class="btn-secondary">
    <a class="nav-link text-white" asp-area="" asp-controller="UserList" asp-action="ShowUserLists">Back UserList</a>
</button>


<div class="d-flex justify-content-center">

    <div class="w-75">
        @using (Html.BeginForm($"{@ViewBag.action}", "UserList", new { userid = @ViewBag.userid }, FormMethod.Post))
        {
            <p>@ViewBag.userid</p>
            <div class="p-2 w-100">
                @Html.Label("firstName", "First Name", new { @class = "fw-bold" })
                @Html.TextBoxFor(m => m.firstName, "", new { @class = "form-control", placeholder = "Please enthe the First Name" })
            </div>
            <div class="p-1 w-100">
                @Html.Label("lastName", "Last Name", new { @class = "fw-bold" })
                @Html.TextBoxFor(m => m.lastName, "", new { @class = "form-control", placeholder = "Please enthe the Last Name" })
            </div>
            <div class="p-1 w-100">
                @Html.Label("salary", "Salary", new { @class = "fw-bold" })
                @Html.TextBoxFor(m => m.salary, "", new { @class = "form-control", placeholder = "Please enthe the salary", type = "number" })
            </div>
            <div class="d-flex p-1 gap-1 ">
                @Html.Label("gender", "Gender", new { @class = "pe-2 fw-bold" })
                @Html.RadioButtonFor(model => model.gender, "Male", new { id = "maleGender" })
                @Html.Label("maleGender", "Male")
                @Html.RadioButtonFor(model => model.gender, "Female", new { id = "femaleGender" })
                @Html.Label("femaleGender", "Female")
            </div>

            <div class="d-flex justify-content-center gap-3 py-3">
                <input type="reset" value="Reset" class=" btn-primary ">
                <input type="submit" value="submit" class="btn-danger ">

            </div>
 }
    </div>
</div>



